@model IEnumerable<BudgetProfilerr.Models.Entities.UserModel>
        
<div class="row">
    <div class="col-md-5">
        <h1>Information<br><small>Showing the details for the selected users.</small></h1><br>User information displays their <mark>First Name</mark> and <mark>Last Name</mark>.
    </div>
</div>
<div class="col-md-5">
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
        </tr>
        @foreach (var user in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(m => user.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(m => user.LastName)
                </td>
            </tr>
        }
    </table>
    <div class="btn-group">
        <div class="label btn">
            <span class="glyphicon glyphicon-home success"></span>@Html.ActionLink("Home", "Index", "Home")
        </div>
        <div class="label btn">
            <span class="glyphicon glyphicon-user"></span>@Html.ActionLink("Users", "Index", "Users")
        </div>
    </div>
</div>
