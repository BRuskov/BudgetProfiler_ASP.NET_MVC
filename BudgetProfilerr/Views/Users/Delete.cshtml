@model IEnumerable<BudgetProfilerr.Models.Entities.UserModel>
@{
    ViewBag.Title = "Delete";
}
<hr>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1>Delete<br><small>Confirm the deletion of the chosen users.</small></h1><br>User deletion will cause the <span class="mark">loss</span> of user related
            <ul>
                <li>Username</li>
                <li>Transactions</li>
                <li>Defined categories</li>
            </ul>
        </div>
        <div class="col-md-6 text-right">
            <table class="table table-bordered table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                </tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => user.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => user.LastName)
                        </td>
                    </tr>
                }
            </table>
            @using (Html.BeginForm())
            {
                <input type="submit" value="Delete" class="btn btn-primary">
                <div class="btn-group">
                    <div class="label btn">
                        <span class="glyphicon glyphicon-home success"></span>@Html.ActionLink("Home", "Index", "Home")
                    </div>
                    <div class="label btn">
                        <span class="glyphicon glyphicon-user"></span>@Html.ActionLink("Users", "Index", "Users")
                    </div>
                </div>
            }
        </div>
    </div>
</div>

